import java.util.ArrayList;
import java.util.Scanner;

public class EducationalCenter {
    private static ArrayList<Student> students = new ArrayList<>();
    private static int idCounter = 1;

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int choice;

        do {
            System.out.println("\n=== O'quv Markazi Boshqaruv Tizimi ===");
            System.out.println("1. Yangi talaba qo'shish");
            System.out.println("2. Talabalar ro'yxatini ko'rish");
            System.out.println("3. Talaba ma'lumotlarini yangilash");
            System.out.println("4. Talabani o'chirish");
            System.out.println("0. Chiqish");
            System.out.print("Tanlovingizni kiriting: ");

            choice = scanner.nextInt();
            scanner.nextLine(); // Enter tugmasini tozalash

            switch (choice) {
                case 1:
                    addStudent(scanner);
                    break;
                case 2:
                    viewStudents();
                    break;
                case 3:
                    updateStudent(scanner);
                    break;
                case 4:
                    deleteStudent(scanner);
                    break;
                case 0:
                    System.out.println("Dastur tugatildi.");
                    break;
                default:
                    System.out.println("Noto'g'ri tanlov. Qayta urinib ko'ring.");
            }
        } while (choice != 0);

        scanner.close();
    }

    private static void addStudent(Scanner scanner) {
        System.out.print("Talaba ismini kiriting: ");
        String name = scanner.nextLine();
        System.out.print("Kurs nomini kiriting: ");
        String course = scanner.nextLine();

        Student student = new Student(idCounter++, name, course);
        students.add(student);
        System.out.println("Yangi talaba qo'shildi.");
    }

    private static void viewStudents() {
        if (students.isEmpty()) {
            System.out.println("Hozircha talaba yo'q.");
        } else {
            System.out.println("\n=== Talabalar Ro'yxati ===");
            for (Student student : students) {
                System.out.println(student);
            }
        }
    }

    private static void updateStudent(Scanner scanner) {
        System.out.print("Yangilamoqchi bo'lgan talabani ID sini kiriting: ");
        int id = scanner.nextInt();
        scanner.nextLine();

        for (Student student : students) {
            if (student.getId() == id) {
                System.out.print("Yangi kurs nomini kiriting: ");
                String newCourse = scanner.nextLine();
                student.setCourse(newCourse);
                System.out.println("Talaba ma'lumotlari yangilandi.");
                return;
            }
        }

        System.out.println("ID bo'yicha talaba topilmadi.");
    }

    private static void deleteStudent(Scanner scanner) {
        System.out.print("O'chirmoqchi bo'lgan talabani ID sini kiriting: ");
        int id = scanner.nextInt();

        for (Student student : students) {
            if (student.getId() == id) {
                students.remove(student);
                System.out.println("Talaba o'chirildi.");
                return;
            }
        }

        System.out.println("ID bo'yicha talaba topilmadi.");
    }
}


//////////Student classi//
class Student {
    private int id;
    private String name;
    private String course;

    public Student(int id, String name, String course) {
        this.id = id;
        this.name = name;
        this.course = course;
    }

    public int getId() {
        return id;
    }

    public String getName() {
        return name;
    }

    public String getCourse() {
        return course;
    }

    public void setCourse(String course) {
        this.course = course;
    }

    @Override
    public String toString() {
        return "Talaba ID: " + id + ", Ismi: " + name + ", Kurs: " + course;
    }
}
