#include <iostream>
using namespace std;

int main() {
    double num1, num2;
    char son;
    cout << "Ikkita son kiriting: "<<endl;
    cout<<"1-son= "; cin >> num1; 
    cout<<"2-son= "; cin>> num2;
    cout << "Amalni tanlang (+, -, *, /)=  ";
    cin >> son;

    double result;
    switch (son) {
        case '+':
            result = num1 + num2; 
            cout << "Natija: " << result << endl;
            break;
        case '-':
            result = num1 - num2; // Ayirish
            cout << "Natija: " << result << endl;
            break;
        case '*':
            result = num1 * num2; // Ko'paytirish
            cout << "Natija: " << result << endl;
            break;
        case '/':
            if (num2 != 0) { 
                result = num1 / num2;
                cout << "Natija: " << result << endl;
            } else {
                cout << "Xatolik: Nolga bo'linish mumkin emas!" << endl;
            }
            break;
        default:
            cout << "Noto'g'ri amal!" << endl; // Noto'g'ri amal tanlansa
    }

    return 0; 
}
