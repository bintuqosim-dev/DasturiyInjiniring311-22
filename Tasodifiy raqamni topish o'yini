#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(0));
    int tasodifiySon = rand() % 100 + 1; // 1 dan 100 gacha son
    int taxmin;
    int urinishlar = 0;

    cout << "Tasodifiy sonni topish o'yini!\n";
    cout << "1 dan 100 gacha sonni toping.\n";

    do {
        cout << "Sonni kiriting: ";
        cin >> taxmin;
        urinishlar++;

        if (taxmin > tasodifiySon)
            cout << "Kichikroq sonni kiriting.\n";
        else if (taxmin < tasodifiySon)
            cout << "Kattaroq sonni kiriting.\n";
        else
            cout << "Tabriklaymiz! Siz " << urinishlar << " urinishda topdingiz.\n";

    } while (taxmin != tasodifiySon);

    return 0;
}
